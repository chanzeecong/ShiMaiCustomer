/* pages/search_buyer/search_buyer.wxss */
.search_options{
  position: relative;
  font-size: 28rpx;
  line-height:1.8;
  padding:16rpx 40rpx 16rpx 16rpx;
}
.search-input{
  flex: 1;
  padding:16rpx;
}
.icon_arrow{
  width: 20rpx;
  height: 20rpx;
  overflow: hidden;
  position: absolute;
  right: 6rpx;
  top: 25rpx;
  transform: rotateZ(-45deg);
}
.icon_arrow::after{
  display: block;
  content: "";
  background-color: #000;
  width: 100%;
  height: 100%;
  transform: rotateZ(45deg) translateY(12rpx);
}
.selection-wrapper{
  display: none;
  top: 96rpx;
  left: 0;
  position: absolute;
  font-size: 28rpx;
  color: #fff;
  background-color: #000;
  padding: 0 12rpx;
  width: 144rpx;
  min-height: 200rpx;
  border-radius: 6rpx;
}
.selection-wrapper.show{
  display: block;
}
.selection_arrow{
  width:50rpx;
  height:50rpx;
  top:-15rpx;
  left:50%;
  position:absolute;
  overflow:hidden;
  z-index:2;
  transform:translateX(-50%) rotateZ(-135deg);
}
.selection_arrow::before{
  display: block;
  content: "";
  position: absolute;
  background-color: #000;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  transform: rotateZ(-45deg) translateY(32rpx);
}
.selection-wrapper .radio-group .radio_seletions{
  display: none;
}
.radio_label{
  font-size: 28rpx;
  display: block;
  padding: 16rpx 0;
  text-align: center;
  border-bottom: 2rpx solid rgba(255, 255, 255, .4);
}
.radio_label:last-child{
  border-bottom: none;
}
.radio_label .icon{
  width: 20rpx;
  height: 20rpx;
  margin-right: 16rpx;
}
.icon-trash{
  position: absolute;
  right: 20px;
  background-position: center;
  background-size: cover;
  width: 28rpx;
  height: 28rpx;
}
.search_group{
  margin-bottom: 40rpx;
}
.search_title{
  font-size: 28rpx;
  color: rgba(0, 0, 0, .4);
  margin-bottom: 40rpx;
}
.search_item{
  text-align: center;
  display: inline-block;
  min-width: 100rpx;
  background-color: rgba(0, 0, 0, .05);
  color: #000;
  font-size: 20rpx;
  margin-right: 40rpx;
  padding: 10rpx 0;
}