/* pages/buyer/buyer.wxss */
.buyer-view-scroll{
  display: block;
  height: 280rpx;
}
.buyer-item{
  position: relative;
  width: 400rpx;
  height: 240rpx;
  display: inline-block;
  margin: 12rpx;
  overflow: hidden;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 12rpx rgba(245, 57, 110, .15);
}
.buyer-item:first-child{
  margin-left: 32rpx;
}
.buyer-item:last-child{
  margin-right: 32rpx;
}
.buyer-item > .item-content{
  padding: 10rpx;
}
.item-sign{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 20rpx;
  background-color: rgba(245, 57, 110, 1);
  width: 120rpx;
  text-align: center;
  transform-origin: 50%;
  transform: rotateZ(45deg) translateX(32rpx) translateY(-4rpx);
  color: #fff;
  z-index: 2;
}
.buyer_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.buyer_info{
  font-size: 24rpx;
}
.buyer_info text{
  display: block;
}
.buyer_title{
  margin-bottom: 16rpx;
  font-weight: bold;
}
.buyer-badges{
  margin: 10rpx 0;
}
.buyer-badges .badges-item{
  display: inline-block;
  color: #F5396E;
  border: 2rpx solid #F5396E;
  border-radius: 4rpx;
  font-size: 20rpx;
  padding: 4rpx 0;
  text-align: center;
  width: 100rpx;
  margin: 10rpx;
}
.buyer-action{
  text-align: center;
}
.buyer-focus{
  border-radius: 50rpx;
  background-color: rgba(245, 57, 110, 1);
  color: #fff;
  font-size: 24rpx;
  display: inline-block;
  width: 160rpx;
  line-height: 2;
  box-shadow: 0 2rpx 6rpx rgba(245, 57, 110, .72);
}
.buyer-area-list{
  display: flex;
  flex-direction: column;
  padding: 10rpx 32rpx;
}
.area-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  margin: 10rpx 0;
}