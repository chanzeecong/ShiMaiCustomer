/* pages/search_list/search_list.wxss */

.search_info{
  font-size: 28rpx;
  color: rgba(0, 0, 0, .6);
  padding: 16rpx 32rpx;
}

.avartor-img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.good-items {
  width: 100%;
  margin: 1% 0;
}

.content{
  margin: 20rpx 20rpx;
  text-align: justify; 
}  
.item{
  background-color: transparent;
  margin: 1%; 
  margin-bottom: 20rpx;
}

.heart{
  width: 20rpx;
  height: 18rpx;
  margin-right: 8rpx;
}
.item-img{
  width: 100%
  
}
.item-title{
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 15rpx;
  line-height: 27rpx;
}
.item .name{
  padding: 0 15rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}

.item-title-box{
  position: relative;
  margin-top: -10rpx;
}

.name text:last-child{
  flex: 0 0 30rpx;
  font-size:6px;
  color:rgba(0,0,0,0.60);
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}