<view class="content" style='z-index:-1'>
  <view class="left">
    <block wx:for="{{eassyList}}" wx:key="">
      <template is="item" data="{{...item}}" wx:if="{{index%2==0}}"></template>
    </block>
  </view>
  <view class="right">
    <block wx:for="{{eassyList}}" wx:key="">
      <template is="item" data="{{...item}}" wx:if="{{index%2==1}}"></template>
    </block>
  </view>
</view>
<!--  下面是一个模块 -->
<template name="item">
  <view class="item">
    <block wx:if="{{type == 'essay'}}">
      <image class="item-img" src="{{cover_img_link}}" mode="widthFix"></image>
    </block>

    <block wx:else>
       <video class="good-items" autoplay='' poster='{{video_url}}' src='{{video_url}}' style='border-radius:12rpx 12rpx 0px 0px;'></video>
    </block>
    
    <view class="item-title-box">
      <view class='row padRig-4 padLef-4 magTop-10'>
        <text class='font-14 black line-ellipsis font-bold'>{{type}}</text>
      </view>

      <view class='row padTop-10'>
        <text class='font-10 white'>抢购价</text>
        <text class='font-16 black'>{{good_price}}</text>
      </view> 
    </view>

    <view class="name">
      <view class='padTop-10 h-32' style='border-radius:0px 0px 12rpx 12rpx;'>
        <view class='flex flex-row magLef-4'>
          <image class="avartor-img" src='{{img_link}}'></image>
          <view class='flex flex-column justify-between flex-item padLef-6'>
            <text class='font-10 black'>{{name}}</text>
            <text class='font-6 black'>{{region_name}}</text>
          </view>
          
          <view class='flex row padRig-6'>
            <image class="heart padRig-4" src='https://buyer.sm.afxclub.top/icon_like@2x.png'></image>
            <view class='font-10 black'>21</view>
          </view>
        </view>
      </view>
    </view>
  </view>

</template>

<image src='https://buyer.sm.afxclub.top/icon_top@2x.png' mode='aspectFill' class='goTop' hidden='{{!floorstatus}}' bindtap="goTop"></image>

</view>