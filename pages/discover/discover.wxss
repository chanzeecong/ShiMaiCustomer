/* pages/discover/discover.wxss */

.scroll-info {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  -webkit-overflow-scrolling: touch;
  overflow: auto;
}
.banner_img {
  background-position: center;
  background-size: cover;
  border-radius: 12rpx;
  width: 686rpx;
  height: 220rpx;
  margin-left: auto;
  margin-right: auto;
}

.text_img {
  background-position: center;
  background-size: cover;
  width: 40rpx;
  height: 40rpx;
}

.hidetext {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.category-scroll-box {
  margin-top: 30rpx;
  padding-left: 0;
  padding-right: 88rpx;
  position: relative;
}

.category-scroll {
  white-space: nowrap;
}

.category-scroll .scroll-item {
  display: inline-block;
  font-size: 28rpx;
  padding: 28rpx;
}

.arrow-bottom {
  position: absolute;
  right: 30rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background-position: center;
  background-size: cover;
}

.scroll-item {
  position: relative;
}

.scroll-item.active::after {
  display: block;
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #f5396e;
}

.all_selections {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
}

.icon-down {
  width: 40rpx;
  height: 40rpx;
}

.icon-down image {
  width: 100%;
  height: 100%;
}

.selection_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.selection_list > .selection_item {
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  color: #788188;
  border: 2rpx solid rgba(112, 112, 112, 0.25);
  border-radius: 40rpx;
}

.all_selections {
  display: none;
}

.all_selections.active {
  display: block;
}

