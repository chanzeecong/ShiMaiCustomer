/* pages/Allcomments/Allcomments.wxss */
page {
  background-color: #fff;
}

.comment-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 20rpx;
}

.icon-com {
  width: 20rpx;
  height: 16rpx;
}

.comment_release{
  display: flex;
  align-items: flex-end; 
  justify-content: space-around; 
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow:0px 0px 6px rgba(0,0,0,0.16);
  padding: 8px 0 8px 13px;
  background-color: #ffffff;
  font-size: 12px;
  z-index: 999;
}

.comment_release .text{
  width: 640rpx;
  min-height: 17px;
  max-height: 51px; 
  line-height: 17px;
  font-size: 12px;
  margin-bottom: 4px;
  margin-left: 10px;
}

.comment_release .line{
  margin-bottom: 0 ;
  width: 640rpx;
  height: 2rpx;
  background-color: rgba(220, 220, 220, 1);
}

.comment_release .icon-submit{ 
  width:46rpx;
  height:46rpx;
  line-height: 46rpx;
  text-align: center;
  opacity:1;
}

.reply-content {
  width: 596rpx;
  background-color: #f4f4f4;
  margin-left: 90rpx;
}

.reply-btn{
	height: 84rpx;
	text-align: center;
	background-color: #f4f4f4;
	border-top: 1px solid rgba(236,236,236,1);
}
 
.show-icon{
	width: 36rpx;
	height: 24rpx;
}