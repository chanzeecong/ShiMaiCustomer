/**app.wxss**/
page{
  background-color: #f4f4f4;
}
.bg-white{
  background-color: #ffffff;
}
.color_primary{
  color: #F5396E;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.search-wrapper{
  display: flex;
  padding:32rpx;
}
.search-box{
  flex: 1;
  display: flex;
  flex-direction: row;
  background-color: rgba(0, 0, 0, .05);
}
.search_btn{
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 28rpx;
  padding-top: 14rpx;
  padding-bottom: 14rpx;
}
.search-place-text{
  margin-left: 30rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .4);
  flex: 1;
  padding: 16rpx 0;
}
.icon > image{
  width: 100%;
  height: 100%;
}
.icon-search{
  width: 40rpx;
  height: 40rpx;
  padding:16rpx 0 16rpx 16rpx;
}
.section-padding{
  padding: 0 32rpx;
}
.flex{
  display: flex;
}
.flex-row{
  flex-direction: row
}
.flex-column{
  flex-direction: column
}
.flex-wrapper{
  flex-wrap: wrap;
}
.justify-center{
  justify-content: center;
}
.justify-between{
  justify-content: space-between;
}
.justify-around{
  justify-content: space-around;
}
.align-center{
  align-items: center;
}
.bold-text{
  font-weight: bold;
}
.flex-item{
  flex: 1;
}
.font-10pt{
  font-size: 20rpx;
}
.font-12pt{
  font-size: 24rpx;
}
.font-14pt{
  font-size: 28rpx;
}
.font-16pt{
  font-size: 32rpx;
}
.font-18pt{
  font-size: 36rpx;
}
.font-bold{
  font-weight: bold;
}
.m-b-10pt{
  margin-bottom: 20rpx;
}
.m-b-15pt{
  margin-bottom: 30rpx;
}
.m-t-10pt{
  margin-top: 20rpx;
}
.m-t-15pt{
  margin-top: 30rpx;
}
.p-v-10pt{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.p-h-10pt{
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.p-h-20pt{
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.center_text{
  text-align: center;
}

.sub_text_color{
  color: rgba(0,0,0,.4);
}
.sub_text_color2{
  color: rgba(0,0,0,.6);
}
.align-self-end{
  align-self: flex-end;
}
.primary_bg{
  background-color: #F5396E;
  color: #fff;
}
.icon-arrow{
  display: inline-block;
  background-size: cover;
  background-position: center;
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -10rpx;
}
.buyer_area_bg{
  background-position: center;
  background-size: cover;
  height: 400rpx;
  width: 100%;
}
.buyer_box_list{
  padding: 10rpx 32rpx;
}
.buyer_box{
  width: 100%;
  height: 560rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(245, 57, 110, .15);
}
.buyer_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.buyer_head{
  padding: 20rpx;
}
.buyer_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
}
.buyer-badges .badges-item{
  display: inline-block;
  color: #F5396E;
  border: 2rpx solid #F5396E;
  border-radius: 4rpx;
  font-size: 20rpx;
  padding: 4rpx 0;
  text-align: center;
  width: 100rpx;
  margin: 10rpx;
}
.title_location{
  position: relative;
  color: rgba(0, 0, 0, .4);
  font-weight: normal;
  line-height: 1.4;
  font-size: 20rpx;
  padding-left:35rpx;

}
.icon_location{
  position: absolute;
  left: -8rpx;
  top: -4rpx;
  width: 40rpx;
  height: 40rpx;
}
.buyer_middle_info{
  text-align: center;
  margin-bottom: 40rpx;
}
.info_title{
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.info_sub_title{
  display: block;
  font-size: 24rpx;
}
.buyer-action{
  margin-top: 30rpx;
  text-align: center;
}
.buyer-focus{
  border-radius: 50rpx;
  background-color: rgba(245, 57, 110, 1);
  color: #fff;
  font-size: 24rpx;
  display: inline-block;
  width: 160rpx;
  line-height: 2;
  box-shadow: 0 2rpx 6rpx rgba(245, 57, 110, .72);
}
.product_item{
  display: inline-block;
  width: 180rpx;
  height: 160rpx;
  background-position: center;
  background-size: cover;
  margin-right: 20rpx;
}
.product_item:last-child{
  margin-right: 0;
}


.icon-arrow{
  margin-bottom: 0;
}
.navigate-icon{
   width: 80rpx;
   height: 80rpx;
}
.navigate-icon image{
  width: 100%;
  height: 100%;
}
.notice_navigation > .navigate_item{
  border-top: 1px solid #F4F4F4;
}
.navigate_text{
  position: relative;
}
.circle_badge_red{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #F12C20;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  font-weight: 300;
}
.buyer_avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
  margin-right: 20rpx;
}
.mybuyer_item{
  border-top: 1px solid #F4F4F4;
}
.mybuyer_status{
  border-radius: 50%;
  width: 10rpx;
  height: 10rpx;
  background-color: transparent;
}
.mybuyer_status.active{
  background-color: #F12C20;
}